{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/telegram-webhook.py",
      "use": "@vercel/python"
    },
    {
      "src": "api/telegram-webhook-simple.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram-webhook.py"
    },
    {
      "src": "/api/telegram-webhook-simple",
      "dest": "/api/telegram-webhook-simple.py"
    },
    {
      "src": "/",
      "dest": "/api/index.py"
    }
  ],
  "env": {
    "ENVIRONMENT": "production"
  }
}